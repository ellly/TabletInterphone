<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical" >

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fadeScrollbars="false"
            android:fadingEdgeLength="70dp"
            android:requiresFadingEdge="horizontal"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideInset" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用件："
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/interactionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="選択中・・・"
                    android:textSize="30sp" />
            </LinearLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/waitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="只今参ります" />

        <Button
            android:id="@+id/getOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="結構です、お帰りください" />

        <Button
            android:id="@+id/moreButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="具体的にお話ください" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/nameButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名刺・名札を見せてください" />

            <Button
                android:id="@+id/namecheckButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名刺確認" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" >
		
        <LinearLayout
            android:id="@+id/voiceChatLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >
            
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:orientation="vertical" >
                
            <ImageView
	                android:id="@+id/mike"
	                android:layout_width="wrap_content"
	                android:layout_height="0dp"
	                android:layout_gravity="center_horizontal"
	                android:layout_weight="1"
	                android:adjustViewBounds="true"
	                android:src="@drawable/microphone_off" />
            
            <ImageView
	                android:id="@+id/speaker"
	                android:layout_width="wrap_content"
	                android:layout_height="0dp"
	                android:layout_gravity="center_horizontal"
	                android:layout_weight="1"
	                android:adjustViewBounds="true"
	                android:src="@drawable/speaker_off" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >
            
	            <ImageView
	                android:id="@+id/packman"
	                android:layout_width="wrap_content"
	                android:layout_height="0dp"
	                android:layout_gravity="center_horizontal"
	                android:layout_weight="1"
	                android:adjustViewBounds="true"
	                android:src="@drawable/packman" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="通話"
                android:textSize="24sp" />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/writeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/pen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="筆談"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>